    <script>
        // Countdown timer
        function updateCountdown() {
            // Set your webinar date here
            const webinarDate = new Date('2024-12-31T20:00:00').getTime();
            const now = new Date().getTime();
            const distance = webinarDate - now;

            if (distance > 0) {
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                // Update the countdown display
                const countdownElements = document.querySelectorAll('.countdown-timer .text-3xl');
                if (countdownElements.length >= 4) {
                    countdownElements[0].textContent = hours.toString().padStart(2, '0');
                    countdownElements[1].textContent = minutes.toString().padStart(2, '0');
                    countdownElements[2].textContent = seconds.toString().padStart(2, '0');
                    countdownElements[3].textContent = '00';
                }
            }
        }

        // Update countdown every second
        setInterval(updateCountdown, 1000);
        updateCountdown(); // Initial call
    </script>
